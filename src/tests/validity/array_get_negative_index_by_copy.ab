// Output
// Value at -4: "zero"
// Value at -3: "one"
// Value at -2: "two"
// Value at -1: "three"

// Replace this with builtin if/when we get around to writing one.
#[allow_absurd_cast]
fun bash_version(): Int {
    const major = trust $ echo "\$\{BASH_VERSINFO[0]}" $ as Int
    const minor = trust $ echo "\$\{BASH_VERSINFO[1]}" $ as Int
    return (major * 100) + minor
}

fun test_index(array) {
    for index in -4..=-1 {
        echo "Value at {index}: \"{array[index]}\""
    }
}

main {
    if bash_version() >= 402 {
        const array = ["zero", "one", "two", "three"]
        test_index(array)
    } else {
        // Negative indexing is not supported before Bash 4.2.
        echo "Succeeded"
    }
}
