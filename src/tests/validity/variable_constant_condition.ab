// Output
// Outer: 42
// If: 12
// Outer: 42
// Else: 24
// Outer: 42

main {
    const x = 42
    echo "Outer: {x}"

    if x > 12 {
        const x = 12
        echo "If: {x}"
    }

    echo "Outer: {x}"

    if x < 12 {
        const x = 12
        echo "If: {x}"
    } else {
        const x = 24
        echo "Else: {x}"
    }

    echo "Outer: {x}"
}
